<div metal:use-macro="layout.base" i18n:domain="onegov.gazette">
    <tal:block metal:fill-slot="content">

        <h2 i18n:translate>Press Releases</h2>

        <div tal:condition="not:press_releases">
            <hr>
            <p i18n:translate>No press releases.</p>
        </div>
        <tal:block tal:condition="press_releases">
            <div tal:repeat="press_release press_releases" class="press-release-published">
                <hr>
                <div>
                    <span class="blank-label">${press_release.organization}</span>
                    <span class="blank-label">${layout.format_date(press_release.issue_date, 'datetime')}</span>
                </div>
                <div class="preview">
                    <div metal:use-macro="layout.macros['press_release_content']"></div>
                </div>
            </div>
            <div class="pagination-centered">
                <div metal:use-macro="layout.macros['pagination']" tal:define="collection layout.model; current_page layout.model;" />
            </div>
        </tal:block>

    </tal:block>
</div>
