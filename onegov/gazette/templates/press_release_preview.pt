<div metal:use-macro="layout.base" i18n:domain="onegov.gazette">
    <tal:block metal:fill-slot="title">
        ${press_release.title}
    </tal:block>
    <tal:block metal:fill-slot="logo">
        <img aria-hidden="true" alt="Gazette" i18n:attributes="alt" src="${request.link(request.app.logo)}" tal:condition="request.app.logo|nothing" />
    </tal:block>
    <tal:block metal:fill-slot="authentication"></tal:block>
    <tal:block metal:fill-slot="before-content"></tal:block>
    <tal:block metal:fill-slot="content">
        <div>
            <span class="blank-label">${press_release.organization}</span>
            <span class="blank-label">${layout.format_date(press_release.issue_date, 'datetime')}</span>
        </div>
        <div class="clearfix hide-for-print">
            <a i18n:translate class="button secondary small action-close right" onclick="var w = window.self;w.open('','_self','');w.close();return false;" href="#">Close</a>
            <a i18n:translate class="button secondary small action-publish right" href="${export}">PDF</a>
            <a i18n:translate class="button small action-print right" onclick="window.print();return false;" href="#">Print</a>
        </div>
        <div class="preview">
            <h2>${press_release.title}</h2>
            <div><tal:block tal:content="structure press_release.text"></tal:block></div>
            <div tal:condition="press_release.files">
                <p tal:repeat="file press_release.files"><a href="${request.link(file)}" i18n:translate>${file.name}</a></p>
            </div>
        </div>
    </tal:block>
    <tal:block metal:fill-slot="footer"></tal:block>
</div>
